<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>cn.jluibm.filter.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>cn.jluibm.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>helloworld</servlet-name>
        <servlet-class>cn.jluibm.controller.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>cn.jluibm.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>cn.jluibm.controller.LoginServlet</servlet-class>
        <init-param>
            <param-name>redirect</param-name>
            <param-value>/helloworld</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>cn.jluibm.controller.UserListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>essayEdit</servlet-name>
        <servlet-class>cn.jluibm.controller.EssayEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>essayDetail</servlet-name>
        <servlet-class>cn.jluibm.controller.EssayDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>essayList</servlet-name>
        <servlet-class>cn.jluibm.controller.EssayListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>removeEssay</servlet-name>
        <servlet-class>cn.jluibm.controller.RemoveEssayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>essayHome</servlet-name>
        <servlet-class>cn.jluibm.controller.EssayHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityListServlet</servlet-name>
        <servlet-class>cn.jluibm.controller.ActivityListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityInputServlet</servlet-name>
        <servlet-class>cn.jluibm.controller.ActivityInputServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>helloworld</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>essayEdit</servlet-name>
        <url-pattern>/essayEdit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>essayDetail</servlet-name>
        <url-pattern>/essay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>essayList</servlet-name>
        <url-pattern>/essayList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removeEssay</servlet-name>
        <url-pattern>/removeEssay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>essayHome</servlet-name>
        <url-pattern>/essayHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityListServlet</servlet-name>
        <url-pattern>/ActivityListServlet-admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityInputServlet</servlet-name>
        <url-pattern>/ActivityInputServlet-admin</url-pattern>
    </servlet-mapping>

</web-app>

